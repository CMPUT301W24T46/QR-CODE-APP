<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/organizer_eventName"
        android:layout_width="161dp"
        android:layout_height="35sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Event Name"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/organizer_eventImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/organizer_eventDate"
        android:layout_width="151dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Event Date"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/organizer_eventImage"
        app:layout_constraintTop_toBottomOf="@+id/organizer_eventName" />

    <Button
        android:id="@+id/btn_organizer_eventView"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:text="@string/View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/organizer_eventImage"
        android:layout_width="59dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>