<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_listAttendee"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/see_list_of_attendees"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_QRCode"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/QR_code_info"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_listAttendee" />

    <Button
        android:id="@+id/btn_updateEvent"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/update_event_info"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_QRCode" />

    <Button
        android:id="@+id/btn_locationCheckIn"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/text_location_checkin"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_updateEvent" />
</androidx.constraintlayout.widget.ConstraintLayout>