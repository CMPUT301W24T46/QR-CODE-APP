<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/registratorName"
        android:layout_width="161dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:text="Attendee Name"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/registorImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registrationDate"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Date of registration"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/registorImage"
        app:layout_constraintTop_toBottomOf="@+id/registratorName" />

    <Button
        android:id="@+id/btnViewProfile"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="@string/view"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible"
        android:backgroundTint="#FFDB58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/registorImage"
        android:layout_width="59dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>

